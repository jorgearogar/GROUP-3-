<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="@drawable/_624285575365"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="133dp"
        android:layout_height="166dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/_624284523820" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:background="#F4F4F4"
        android:text="Name:VETFRIENDS ANIMAL CLINIC"
        android:textColor="#100D0D"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:background="#F4F4F4"
        android:text="Address:Asingan Pangasinan"
        android:textColor="#100D0D"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#100D0D"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:background="#F4F4F4"
        android:text="Name:ZACARIAS ANIMAL CLINIC"
        android:textColor="#100D0D"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:background="#F4F4F4"
        android:text="Address:Mangaldan Pangasinan"
        android:textColor="#100D0D"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#100F0F"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tnn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:text="Name"
        android:textColor="#0E0E0E"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/txtname"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:background="#888686"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/taa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:text="Address"
        android:textColor="#0E0E0E"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/txtaddress"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:background="#888686"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:text="Contribute"
        android:textColor="#0B0A0A"
        android:textSize="16sp"
        app:backgroundTint="#EAC184" />

</LinearLayout>